<h2>Select client</h2>

<%= form_tag admin_clients_path, method: :get do %>
    <%= text_field_tag :query, params[:query], :class => "span3", :placeholder => "Search by first or last name, or email" %>
    <%= submit_tag "Search", name: nil, :class => "btn" %>
<% end %>

<% @users.each do |user| %>
  <p>
    <%= link_to user.full_name, new_admin_appointment_path(:user_id => user.id) %><%= ", #{user.email}" %>
  </p>
<% end %>