<div class="span12">
  <center><h3>Admin Dashboard</h3></center>

  <div class="row">
    <div class="span6">
      <center><h4>This week's appointments</h4></center>
      <table class="table table-striped table-bordered">
        <tr>
          <th>Date</th>
          <th>Start</th>
          <th>End</th>
          <th>Client</th>
          <th></th>
        </tr>
        <% @weekly_appointments.each do |appt| %>
          <tr>
            <td><%= formatted(appt.date) %></td>
            <td><%= formatted(appt.start) %></td>
            <td><%= formatted(appt.end) %></td>
            <td><%= appt.user.full_name %></td>
            <td><%= link_to "Manage", admin_appointment_path(appt) %></td>
          </tr>
        <% end %>
      </table>
    </div>

    <div class="span6">
      <center><h4>Next week's appointments</h4></center>
      <table class="table table-striped table-bordered">
        <tr>
          <th>Date</th>
          <th>Start</th>
          <th>End</th>
          <th>Client</th>
          <th></th>
        </tr>
        <% @weekly_appointments_next.each do |appt| %>
          <tr>
            <td><%= formatted(appt.date) %></td>
            <td><%= formatted(appt.start) %></td>
            <td><%= formatted(appt.end) %></td>
            <td><%= appt.user.full_name %></td>
            <td><%= link_to "Manage", admin_appointment_path(appt) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="span12 new-appt">
      <center><%= button_to "Schedule a new appointment", admin_clients_path, method: :get, :class => "btn btn-large btn-success" %></center>
    </div>
  </div>
</div>
