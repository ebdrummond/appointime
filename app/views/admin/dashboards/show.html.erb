<div class="span12">
  <center><h3>Admin Dashboard</h3></center>

  <div class="row">
    <div class="span6">
      <center><h4>This week's appointments</h4></center>
      <table class="table table-striped">
        <tr>
          <th>Date</th>
          <th>Start</th>
          <th>End</th>
          <th>Client</th>
        </tr>
        <% @weekly_appointments.each do |appt| %>
          <tr>
            <td><%= appt.date %></td>
            <td><%= formatted(appt.start) %></td>
            <td><%= formatted(appt.end) %></td>
            <td><%= appt.user.full_name %></td>
          </tr>
        <% end %>
      </table>
    </div>

    <div class="span6">
      <%= button_to "Schedule a new appointment", admin_clients_path, method: :get, :class => "btn" %>
    </div>
  </div>
</div>
